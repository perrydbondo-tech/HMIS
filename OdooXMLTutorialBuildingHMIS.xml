## 3. Patient Management Views

### `views/patient_views.xml`

```xml
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Patient Form View -->
    <record id="view_hmis_patient_form" model="ir.ui.view">
        <field name="name">hmis.patient.form</field>
        <field name="model">hmis.patient</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_create_appointment" type="object" string="New Appointment" class="btn-primary"/>
                    <button name="action_create_prescription" type="object" string="New Prescription" class="btn-secondary"/>
                    <button name="action_view_medical_history" type="object" string="Medical History" class="btn-default"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,inactive,deceased"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Patient Full Name" class="mb16"/>
                        </h1>
                        <div class="oe_inline">
                            <field name="patient_id" readonly="1"/>
                            <field name="age" readonly="1" string="Age" class="ml16"/>
                        </div>
                    </div>
                    
                    <group>
                        <group string="Personal Information">
                            <field name="date_of_birth"/>
                            <field name="gender" widget="radio"/>
                            <field name="blood_type"/>
                            <field name="marital_status"/>
                            <field name="national_id"/>
                            <field name="phone" widget="phone"/>
                            <field name="email" widget="email"/>
                        </group>
                        
                        <group string="Medical Information">
                            <field name="weight" string="Weight (kg)"/>
                            <field name="height" string="Height (cm)"/>
                            <field name="bmi" readonly="1" string="BMI"/>
                            <field name="allergies" widget="textarea"/>
                            <field name="medical_history" widget="textarea"/>
                            <field name="current_medications" widget="textarea"/>
                        </group>
                    </group>
                    
                    <group string="Contact &amp; Insurance">
                        <group string="Address">
                            <field name="street"/>
                            <field name="street2"/>
                            <field name="city"/>
                            <field name="state_id"/>
                            <field name="zip"/>
                            <field name="country_id"/>
                        </group>
                        
                        <group string="Insurance &amp; Emergency">
                            <field name="insurance_id"/>
                            <field name="insurance_provider"/>
                            <field name="insurance_expiry_date"/>
                            <field name="emergency_contact"/>
                            <field name="emergency_phone" widget="phone"/>
                            <field name="emergency_relation"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Appointments">
                            <field name="appointment_ids" mode="tree,form">
                                <tree>
                                    <field name="name"/>
                                    <field name="appointment_date"/>
                                    <field name="doctor_id"/>
                                    <field name="department_id"/>
                                    <field name="state" widget="badge" 
                                           decoration-success="state=='done'"
                                           decoration-warning="state in ['confirmed','in_consultation']"
                                           decoration-danger="state=='cancelled'"/>
                                </tree>
                                <form>
                                    <field name="name"/>
                                    <field name="appointment_date"/>
                                    <field name="doctor_id"/>
                                    <field name="reason"/>
                                </form>
                            </field>
                        </page>
                        
                        <page string="Medical Records">
                            <field name="medical_record_ids" mode="tree,form">
                                <tree>
                                    <field name="visit_date"/>
                                    <field name="doctor_id"/>
                                    <field name="diagnosis"/>
                                    <field name="treatment"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Prescriptions">
                            <field name="prescription_ids" mode="tree,form">
                                <tree>
                                    <field name="name"/>
                                    <field name="prescription_date"/>
                                    <field name="doctor_id"/>
                                    <field name="state" widget="badge"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Lab Tests">
                            <field name="lab_test_ids" mode="tree,form">
                                <tree>
                                    <field name="name"/>
                                    <field name="test_date"/>
                                    <field name="test_type"/>
                                    <field name="state" widget="badge"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Patient Tree View -->
    <record id="view_hmis_patient_tree" model="ir.ui.view">
        <field name="name">hmis.patient.tree</field>
        <field name="model">hmis.patient</field>
        <field name="arch" type="xml">
            <tree decoration-success="state=='active'" decoration-muted="state=='inactive'" decoration-danger="state=='deceased'">
                <field name="patient_id"/>
                <field name="name"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="blood_type"/>
                <field name="phone" widget="phone"/>
                <field name="insurance_provider"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>

    <!-- Patient Search View -->
    <record id="view_hmis_patient_search" model="ir.ui.view">
        <field name="name">hmis.patient.search</field>
        <field name="model">hmis.patient</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Patient Name"/>
                <field name="patient_id"/>
                <field name="phone"/>
                <field name="national_id"/>
                <field name="insurance_id"/>
                
                <filter string="Active Patients" name="active" domain="[('state', '=', 'active')]"/>
                <filter string="New Patients This Month" name="new_this_month" domain="[('create_date', '>=', (context_today().replace(day=1)).strftime('%Y-%m-%d'))]"/>
                <filter string="Patients with Allergies" name="with_allergies" domain="[('allergies', '!=', False)]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Blood Type" name="blood_type" context="{'group_by': 'blood_type'}"/>
                    <filter string="Gender" name="gender" context="{'group_by': 'gender'}"/>
                    <filter string="Insurance Provider" name="insurance" context="{'group_by': 'insurance_provider'}"/>
                    <filter string="Status" name="status" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Patient Kanban View -->
    <record id="view_hmis_patient_kanban" model="ir.ui.view">
        <field name="name">hmis.patient.kanban</field>
        <field name="model">hmis.patient</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state">
                <field name="name"/>
                <field name="patient_id"/>
                <field name="image_1920"/>
                <field name="state"/>
                <field name="blood_type"/>
                <field name="age"/>
                
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong>
                                        <field name="name"/>
                                    </strong>
                                    <div>
                                        <field name="patient_id"/>
                                        <span class="ml-2">â€¢</span>
                                        <field name="age" string="Age" class="ml-2"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_top_side">
                                    <img t-att-src="kanban_image('hmis.patient', 'image_1920', record.id.raw_value)" 
                                         class="oe_kanban_image" alt="Patient Photo" width="64" height="64"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div>
                                    <field name="blood_type" widget="badge" 
                                           decoration-success="blood_type == 'o_positive'"
                                           decoration-warning="blood_type == 'ab_negative'"/>
                                </div>
                                <div>
                                    <field name="state" widget="badge"
                                           decoration-success="state == 'active'"
                                           decoration-muted="state == 'inactive'"
                                           decoration-danger="state == 'deceased'"/>
                                </div>
                                <div t-if="record.allergies.raw_value">
                                    <span class="badge badge-warning">Allergies</span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
